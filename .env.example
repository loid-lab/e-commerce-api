# PostgreSQL connection string (Neon or local)
DB_URL=postgres://user:password@host:5432/dbname

# JWT secret for signing tokens (use a long, random string)
SECRET=your_jwt_secret_here

# Stripe secret API key (for payment integration)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here

# Redis URL (Docker: use redis:6379; Local: use localhost:6379)
REDIS_URL=redis://redis:6379

# Mailtrap SMTP credentials
MAIL_HOST=live.smtp.mailtrap.io
MAIL_USER=your_mailtrap_username
MAIL_PASS=your_mailtrap_password
MAIL_FROM=no-reply@example.com

# Cloudinary API credentials for image upload
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# SMTP 
SMTP_HOST=smtp.mailprovider.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password